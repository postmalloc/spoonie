{
    "manifest_version": 2,
    "name": "Spoonie",
    "version": "1.0",
    "description": "Spoonie makes the internet silly using spoonerisms! Spoonerisms are modifications applied to sentences to (hopefully) make them funny.",
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "scripts/content.js"
            ]
        }
    ],
    "browser_action": {
        "default_title": "Spoonie",
        "default_icon": "images/icon-off-38.png"
    }
}